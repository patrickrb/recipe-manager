generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Recipe {
  id           String   @id @default(cuid())
  title        String
  description  String?
  ingredients  String[]
  instructions String[]
  categories   String[]
  notes        String?
  rating       Int?     @default(0)
  sourceUrl    String?
  sourceAuthor String?

  // Recipe metadata
  prepTime     String?
  cookTime     String?
  totalTime    String?
  servings     String?
  difficulty   String?

  // Nutrition information
  calories     Int?
  protein      Int?     // in grams
  carbs        Int?     // in grams
  fat          Int?     // in grams
  fiber        Int?     // in grams
  sugar        Int?     // in grams
  sodium       Int?     // in milligrams

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  image        String?

  @@map("recipes")
}
